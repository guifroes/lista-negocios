<div class="container">
  <%= form_with(model: negocio, local: true, class: "text-left") do |form| %>
    <% if negocio.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(negocio.errors.count, "error") %> prohibited this negocio from being saved:</h2>

        <ul>
        <% negocio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= form.label :nome %>
          <%= form.text_field :nome, class: "form-control mb-2" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= form.label :categoria %><br>
          <%= select_tag(:categoria_id, options_for_select(@categorias, @negocio.categoria_id), class: "form-control" )%>
        </div>
      </div>
      <div class="col-sm-4"> 
        <div class="form-group">
          <label>Site (opcional)</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon3">https://</span>
            </div>
            <%= form.text_field :site, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <div class="form-group">
          <label>Facebook (opcional)</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon3">fb.com/</span>
            </div>
            <%= form.text_field :facebook, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="form-group">
          <label>Instagram (opcional)</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon3">@</span>
            </div>
            <%= form.text_field :instagram, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>Whatsapp (opcional)</label>
          <%= form.text_field :whatsapp, class: "form-control" %>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>Telefone (opcional)</label>
          <%= form.text_field :telefone, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <label>Fale sobre seu negócio. Use esse espaço para vender seu produto ou serviço! </label>
      <%= form.text_area :descricao, class: "form-control" %>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <div class="form-group">
          <label>CEP (somente números)</label>
          <div class="input-group sm-4">
            <%= form.text_field :cep, class: "form-control" %>
            <div class="input-group-append">
              <button class="btn btn-primary" type="button" data-remote="true">Validar CEP</button>
            </div>
          </div>
        </div>
      </div>
    
      <div class="col-sm-4">
        <div class="form-group">
          <label>Endereço</label>
          <%= form.text_field :logradouro, readonly: "true", class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="form-group">
          <label>Número</label>
          <%= form.text_field :numero, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-3">
        <div class="form-group">
          <%= form.label :complemento %>
          <%= form.text_field :complemento, class: "form-control" %>
        </div>
       </div> 
    </div>  
    
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <%= form.label :bairro %>
          <%= form.text_field :bairro, readonly: "true", class: "form-control" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= form.label :cidade %>
          <%= form.text_field :cidade, readonly: "true", class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <%= form.label :estado %>
          <%= form.text_field :estado, readonly: "true", class: "form-control" %>
        </div>
      </div>
    </div> 

    <div class="actions">
      <%= form.submit value: "Salvar", class: "btn btn-lg btn-primary"%>
      <%= link_to "Cancelar", negocio, class: "btn btn-lg btn-secondary"%>
    </div>
  <% end %>
</div>