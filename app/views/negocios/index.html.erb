<div class="container">
  <p id="notice"><%= notice %></p>

  <% @estados.each do |estado| %>
    <p><h3><%= estado %></h3></p>
  

    <% @negocios.each do |negocio| %>
      <% if (estado == negocio.estado )%>
        <div class="card">
          <div class="card-body text-left">
            <h3 class="card-title"><%= negocio.nome %></h3>
            <p class="text-muted font-italic"><%= negocio.categoria.nome %></p>
            <p class="card-text"><%= negocio.descricao %></p>

            <div class="row">
              <div class="col-sm-6">
                <% if negocio.site && !negocio.site.empty? %>
                  <a href="https://<%= negocio.site %>"/" target="_blank" >
                    <i class="fas fa-globe-americas"></i>
                    <label><%= negocio.site %></label>
                  </a>
                <% end %>
              </div>
              <div class="col-sm-6">
              <% if negocio.email && !negocio.email.empty? %>
                  <a href="mailto:<%= negocio.email %>" >
                  <i class="far fa-envelope"></i>
                  <label><%= negocio.email %></label>
                </a>
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-6">
                <% if negocio.facebook && !negocio.facebook.empty? %>
                  <a href="https://www.fb.com/<%= negocio.facebook %>"/" target="_blank">
                    <i class="fab fa-facebook-square"></i>
                    <label><%= negocio.facebook %></label>
                  </a>
                <% end %>
              </div>
              <div class="col-sm-6">
              <% if negocio.instagram && !negocio.instagram.empty? %>
                <a href="https://www.instagram.com/<%= negocio.instagram %>"/" target="_blank" >
                  <i class="fab fa-instagram"></i>
                  <label><%= negocio.instagram %></label>
                </a>
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-6">
              <% if negocio.whatsapp && !negocio.whatsapp.empty? %>
                <i class="fab fa-whatsapp"></i>
                <label><%= negocio.whatsapp %></label>
                <% end %>
              </div>
              <div class="col-sm-6">
                <% if negocio.telefone && !negocio.telefone.empty? %>
                  <i class="fas fa-phone"></i>
                  <label><%= negocio.telefone %></label>
                <% end %>
              </div>
              </div> 
            <% if is_current_user_owner(negocio)%>
              <div class="row">
                <div class="col-sm-6">
                  <%= link_to "Editar", edit_negocio_path(negocio), class: "btn btn-primary btn-lg" %> 
                </div>
                <div class="col-sm-6">
                  <%= link_to "Deletar", negocio, method: :delete, class: "btn btn-danger btn-lg", data: { confirm: "Are you sure?" } %>
                </div>
              </div>
            <% end %>
          </div>
          
        </div>
      <% end %>
    <% end %>
  <% end %>
  <p>
    <div class="card">
      <div class="card-body">
        <p class="card-text">Divulgue seu negócio que, mesmo na quarentena, está funcionando.</p>
        <%= link_to "Divulgar meu negócio", new_negocio_path, class: "btn btn-primary btn-lg" %> 
      </div>
    </div>
  <p>    
</div>
