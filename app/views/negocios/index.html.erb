<p id="notice"><%= notice %></p>

<h1>Negocios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @negocios.each do |negocio| %>
      <tr>
        <td><%= negocio.nome %></td>
        <td><%= negocio.descricao %></td>
        <td><%= negocio.site %></td>
        <td><%= link_to 'Show', negocio %></td>
        <td><%= link_to 'Edit', edit_negocio_path(negocio) %></td>
        <td><%= link_to 'Destroy', negocio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

