<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Negocios</h1>
      <% @negocios.each do |negocio| %>
        <div class="card">
          <div class="card-body text-left">
            <h3 class="card-title"><%= negocio.nome %></h3>
            <p class="text-muted font-italic"><%= negocio.categoria.nome %></p>
            <p class="card-text"><%= negocio.descricao %></p>
            <div class="row">
              <div class="col-6">
                <% if negocio.facebook && !negocio.facebook.empty? %>
                  <i class="fab fa-facebook-square"></i>
                  <label><%= negocio.facebook %></label>
                <% end %>
              </div>
              <div class="col-6">
              <% if negocio.instagram && !negocio.instagram.empty? %>
                <i class="fab fa-instagram"></i>
                <label><%= negocio.instagram %></label>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
              <% if negocio.whatsapp && !negocio.whatsapp.empty? %>
                <i class="fab fa-whatsapp"></i>
                <label><%= negocio.whatsapp %></label>
                <% end %>
              </div>
              <div class="col-6">
                <% if negocio.telefone && !negocio.telefone.empty? %>
                  <i class="fas fa-phone"></i>
                  <label><%= negocio.telefone %></label>
                <% end %>
              </div>
             </div> 
          </div>
        </div>
      <% end %>
      <p><div class="card">
      <div class="card-body">
        <p class="card-text">Divulgue seu negócio que, mesmo na quarentena, está funcionando.</p>
        <%= link_to "Divulgar meu negócio", new_negocio_path, class: "btn btn-primary btn-lg" %> 
      </div>
    </div>
</div>
