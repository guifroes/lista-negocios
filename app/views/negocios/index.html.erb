<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Negocios</h1>

  
      <% @negocios.each do |negocio| %>
        <div class="card">
          <div class="card-body text-left">
            <h3 class="card-title"><%= negocio.nome %></h3>
            <p class="text-muted font-italic"><%= negocio.categoria.nome %></p>
            <p class="card-text"><%= negocio.descricao %></p>
            <div class="row">
              <div class="col-3">
                <i class="fab fa-facebook-square fa-2x"></i>
                <label><%= negocio.facebook %></label>
              </div>
              <div class="col-3">
                <i class="fab fa-instagram fa-2x"></i>
                <label><%= negocio.instagram %></label>
              </div>
              <div class="col-3">
                <i class="fab fa-whatsapp fa-2x"></i>
                <label><%= negocio.whatsapp %></label>
              </div>
              <div class="col-3">
                <i class="fas fa-phone fa-2x"></i>
                <label><%= negocio.telefone %></label>
              </div>
             </div> 
          </div>
        </div>
      <% end %>

  <%= link_to 'New Negocio', new_negocio_path %>
</div>
